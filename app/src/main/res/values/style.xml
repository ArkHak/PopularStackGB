<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="login_layout_fields_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/field_edit_background</item>
        <item name="android:drawablePadding">@dimen/login_layout_edit_text_drawable_padding</item>
        <item name="android:padding">@dimen/login_layout_edit_text_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textColorHint">@color/color_text_hint</item>
    </style>

    <style name="login_layout_buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
    </style>

</resources>